@model RenderDesignWeb.ViweModel.Project.ProjectViewModel


@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Edit";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-controller="Project" asp-action="Index">Projects</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Project" asp-action="Edit">Edit</a></li>
                    <li class="breadcrumb-item active">@ViewData["navigation"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                        <h2 class="card-title"><b> Edit Project</b></h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">

                                <form asp-action="Edit" enctype="multipart/form-data">
                                    <div class="row d-flex justify-content-around align-items-center">

                                        <div class="form-group col-lg-6 ">
                                            <label asp-for="Name" class="control-label">Name_En</label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                       
                                        <div class="form-group col-lg-6 ">
                                            <label asp-for="Description" class="control-label">Description_En</label>
                                            <textarea asp-for="Description" class="form-control" style="height:200px"> </textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                      
                                        
                                        <div class="form-group col-lg-6 ">
                                            <label asp-for="Location" class="control-label">Place_Ar</label>
                                            <input asp-for="Location" class="form-control" />
                                            <span asp-validation-for="Location" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-lg-6 ">
                                            <label asp-for="Type" class="control-label">Type</label>
                                            <select asp-for="Type" class="form-control">
                                                <option>Commercial</option>
                                                <option>Residential</option>
                                                <option>Landscape</option>


                                            </select>
                                            <span asp-validation-for="Type" class="text-danger"></span>
                                        </div>
                                       
                                    </div>
                                    <div class="form-group text-center">
                                        <input type="submit" value="Save" class="btn btn-success" />

                                        <a class="btn btn-dark" asp-action="Index">Back to List</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



