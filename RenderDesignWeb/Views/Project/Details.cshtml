@model RenderDesignWeb.ViweModel.Project.ProjectViewModel

@{
    Layout = "_LayoutDesigner";
    ViewData["Title"] = "Details";
}
<div style="margin-left:30px">
    <h1>Details-Project</h1>

    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
           
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
          
            <dt class="col-sm-2">
                Type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
         
            <dt class="col-sm-2">
                Images
            </dt>
            <dd class="col-sm-10">
                @foreach (var elem in Model.images)
                {
                    <img src="~/@elem.PathImg" width="60px" height="60px" />
                }
            </dd>

        </dl>
    </div>
    <div>
        <a class="btn btn-primary" style="margin-bottom:20px" asp-action="Index">Back to List</a>
    </div>
</div>
